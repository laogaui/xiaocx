/**app.wxss**/
Page, view, text {
  box-sizing: border-box;
}

Page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

view {
  width: 100%;
}

text {
  font-size: 14px;
}

.text-center {
  text-align: center;
}

.container {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
  overflow: hidden;
}

.title {
  position: absolute;
  top: 0;
  left: 0;
  padding: 40rpx 20rpx;
  font-weight: bold;
  text-align: left;
  background-color: #EEEEEE;
  color: #333;
}

.title text {
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  /*padding-left: 40rpx;*/
  float: left;
}

.title button {
  height: 60rpx;
  width: 200rpx;
  font-size: 14px;
  line-height: 60rpx;
  float: right;
  display: block;
}

.list {
  border-top: 1px solid #DDDDDD;
  height: 100%;
}

.list-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #DDDDDD;
  padding: 30rpx 40rpx;
}

.list-item.tap {
  background-color: #DDDDDD;
}

.list-item.hover {
  background-color: #EEEEEE;
}

.list-item-text {
  flex: auto;
}

.list-item-btn {
  font-size: 12px;
  border: 2px solid #333;
  border-radius: 15rpx;
  height: 60rpx;
  line-height: 56rpx;
  width: 100rpx;
  font-weight: bold;
  padding: 0;
  text-align: center;
}

.btn-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.btn-group button {
  width: 300rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 16px;
  border: 2px solid #333;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1000;
  background-color: #FFFFFF;
  padding-bottom: 360rpx;
}

.modal .modal-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 360rpx;
  padding-top: 40rpx;
}

.modal .modal-footer-text {
  display: block;
  color: red;
  font-size: 12px;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 40rpx;
}

.modal .modal-footer-input {
  border: 1px solid #DDDDDD;
  border-radius: 4px;
  margin: 0 20rpx 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 14px;
}

.modal .modal-footer-btn-group button {
  height: 60rpx;
  line-height: 56rpx;
  font-size: 16px;
  font-weight: bold;
  background-color: #FFFFFF;
}

.row::after {
  display: table;
  content: ' ';
  clear: both;
}

.col-xs-4 {
  float: left;
  width: 33.33333%;
}

.thumbnail {
  padding: 4rpx;
  margin-bottom: 20px;
  line-height: 1.42857;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 4rpx;
}

.thumbnail image {
  display: block;
  max-width: 100%;
  height: auto;
  margin-left: auto;
  margin-right: auto;
}

.thumbnail .caption {
    padding: 9rpx;
    color: #333333;
}

.thumbnail .caption text {
  font-size: 14px;
  display: block;
}

.thumbnail .caption text:first-of-type {
  color: #666666;
  min-width: 140rpx;
}

.danger {
  color: #d9534f;
}

.warning {
  color: #f0ad4e;
}

.success {
  color: #5cb85c;
}

.danger-bg {
  background-color: #d9534f;
}

.warning-bg {
  background-color: #f0ad4e;
}

.success-bg {
  background-color: #5cb85c;
}
.risk-info view text {
  display: block;
  float: left;
  height: 70rpx;
  line-height: 70rpx;
}

.risk-info view {
  overflow: hidden;
}

.risk-info view::after {
  clear: both;
  content: ' ';
  display: table;
}

.risk-info view text:first-of-type {
  color: #666666;
  min-width: 200rpx;
}

.risk-info view text.risk-state {
  color: #FFFFFF;
  font-weight: bold;
  height: 40rpx;
  margin-top: 15rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 12px;
}